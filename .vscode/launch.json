{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Offline",
      "cwd": "${workspaceFolder}",
      "program": "node_modules/serverless/bin/serverless",
      "args": ["offline", "--noTimeout", "--dontPrintOutput"],
      "sourceMaps": true,
      "runtimeArgs": ["--lazy"],
      "outFiles": ["${workspaceFolder}/.webpack/**/*.js"],
      "protocol": "inspector",
      "runtimeExecutable": "node",
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceRoot}\\node_modules\\serverless\\bin\\serverless"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest",
      "cwd": "${workspaceFolder}",
      "args": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "database"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug DynamoDB Streams",
      "cwd": "${workspaceFolder}",
      "args": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "dynamodb-streams"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug S3 Event",
      "cwd": "${workspaceFolder}",
      "args": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "image-resizer"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
